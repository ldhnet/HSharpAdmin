<html>
<head>
    <meta content="no" name="apple-mobile-web-app-capable">
    <meta content="True" name="HandheldFriendly">
    <meta content="#303643" name="theme-color">
    <title>Error-Page</title>
    <meta charset="utf-8">
    <meta content="always" name="referrer">
    <meta content="Gitee" property="og:site_name">
    <meta content="Object" property="og:type">
    <meta content="Error-Page" itemprop="name" property="og:title">
    <meta content="pc,mobile" name="applicable-device">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <style> 
        .error-page-header .error-nav {
            height: 130px;
            background-color: #303643;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
        }

        .error-page-header .error-nav-inner {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: justify;
            -ms-flex-pack: justify;
            justify-content: space-between;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
        }

        .error-page-header .error-nav-left {
            font-size: 26px;
            color: #fff;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            -webkit-box-flex: 1;
            -ms-flex: 1;
            flex: 1;
        }

        .error-page-header .error-nav-right {
            color: #dce3e8;
            font-size: 14px; 
        }

        .error-page-header .error-nav-right a {
            color: #dce3e8;
            font-size: 20px;
        }

        .error-page-content {
            height: calc(100vh - 220px);
            text-align: center;
            background-color: #fff;
        }

        .error-page-content .error-page-container {
                color: red;
                font-size: 26px;
                padding:50px;
        }
        .btn
        {
            min-width: 80px;
            margin-left: 4px;
            margin-right: 15px;
            color: #fff;
            border-color: #fff;
            background-color: #337ab7;
        }
        .error-page-footer {
            border-top: solid 1px rgba(255,255,255,.3);
            margin: 20px 0;
            padding-top: 15px
        }
    </style>
</head>
<body style="">
    <div class="error-page-header">
        <header class="error-nav">
            <div class="ui container">
                <div class="error-nav-inner">
                    <div class="error-nav-left">
                        <div class="error-nav-title">HSharpAdmin请求返回结果</div>
                    </div>
                    <div class="error-nav-right"> <a href="/">返回</a></div>
                </div>
            </div>
        </header>
    </div>
    <div class="error-page-content">
        <div class="error-page-container">  
            <p>
                @ViewBag.Message
            </p>
            <a class="btn" href="/">返回</a>
        </div>
    </div>
    <div class="error-page-footer">
        <div style="text-align:center">
            &copy; 2025-@DateTime.Now.Year 
            <a href="https://gitee.com/ldhnet/" target="_blank" style="color:white"></a> All Rights Reserved.<br>
            <a href="https://gitee.com/ldhnet/" target="_blank" rel="nofollow">lidonghui</a><br>
        </div>
    </div>
</body>
</html>